<div class="row">
    <div class="span6 offset3">
        <div class="well">
          <%= image_tag @list.image.url(:medium) %>
          <h1><%= @list.title %></h1>
          <ol>
            <li><%= @list.item1 %></li>
            <li><%= @list.item2 %></li>
            <li><%= @list.item3 %></li>
            <li><%= @list.item4 %></li>
            <li><%= @list.item5 %></li>
          </ol>

<p>Submitted by <%= @list.user.email %></p>
<% if current_user == @list.user %>
  <%= link_to "Edit", edit_list_path %>
  <%= link_to "Delete", list_path, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to "Back", root_path %>
          </div>
    </div>
</div>


